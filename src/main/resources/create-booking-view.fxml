   <top>
      <HBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #3498db;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Create New Booking" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Origin:" />
                  <ComboBox fx:id="originComboBox" prefWidth="150.0" promptText="Select Origin" />
                  <Label text="Destination:" />
                  <ComboBox fx:id="destinationComboBox" prefWidth="150.0" promptText="Select Destination" />
                  <Label text="Date:" />
                  <DatePicker fx:id="departureDatePicker" />
                  <Button fx:id="searchFlightsButton" mnemonicParsing="false" onAction="#handleSearchFlights" style="-fx-background-color: #3498db;" text="Search Flights" textFill="WHITE" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Available Flights:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <ListView fx:id="flightsListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Available Seats:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <ListView fx:id="seatsListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </center>
      </BorderPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="60.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="bookButton" mnemonicParsing="false" onAction="#handleBookButton" style="-fx-background-color: #2ecc71;" text="Book Selected Seat" textFill="WHITE" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
